            <tr>
              <th>TicketId</th>
              <th>Value</th>
            </tr>
            </thead>
          </table>
        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->
    </div>
    <!-- /.col -->
  </div>
</section>

<script type="text/javascript">
    $(function () {
        $('#tickets').DataTable( {
            ajax: {
                url: '/credits.json',
                dataSrc: ''
            },
            columns: [
                { data: 'TicketId' },
                { data: 'Value' },
            ]
        } );
    });
</script>